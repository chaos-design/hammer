{
  "name": "@chaos-design/hammer",
  "version": "0.0.19-beta.7",
  "description": "hammer for build a project",
  "private": true,
  "main": "index.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks",
    "typecheck": "tsc -p scripts --noEmit && pnpm -r --parallel run typecheck",
    "lint": "eslint --cache .",
    "format": "prettier --write --cache .",
    "build": "pnpm -r --filter './packages/*' --filter './packages/**/*' run build",
    "dev": "pnpm -r --parallel --filter='./packages/*' run dev",
    "bump-version": "zx --quiet scripts/bump-version.mjs",
    "release": "bumpp packages/**/package.json packages/**/*/package.json",
    "publish-pkg": "sh ./scripts/publish-to-npm.sh"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chaos-design/hammer.git"
  },
  "keywords": [],
  "author": "Rain120",
  "license": "MIT",
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown",
      "git add ."
    ],
    "packages/*/{src,types}/**/*.ts": [
      "eslint --cache --fix"
    ],
    "packages/**/*.d.ts": [
      "eslint --cache --fix"
    ]
  },
  "devDependencies": {
    "@chaos-design/utils-pkg": "workspace:*",
    "@types/node": "^20.3.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "bumpp": "^9.1.1",
    "eslint": "^8.44.0",
    "eslint-define-config": "^1.21.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-regexp": "^1.15.0",
    "lint-staged": "^13.2.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "simple-git-hooks": "^2.8.1",
    "typescript": "^5.1.6",
    "zx": "^7.2.3"
  }
}
