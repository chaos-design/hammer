{
  "name": "@chaos-design/package",
  "type": "module",
  "version": "0.0.24",
  "description": "Find the tor packages config from the cwd path of package.",
  "exports": {
    "types": "./index.d.ts",
    "require": "./lib/index.cjs",
    "import": "./lib/index.js"
  },
  "main": "./lib/index.cjs",
  "module": "./lib/index.js",
  "types": "./index.d.ts",
  "files": [
    "lib",
    "index.d.ts"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest",
    "preinstall": "npx only-allow pnpm",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "release": "bumpp package.json"
  },
  "dependencies": {
    "@pnpm/fs.find-packages": "^4.0.0",
    "find-up": "^7.0.0",
    "micromatch": "^4.0.7",
    "read-yaml-file": "^2.1.0"
  },
  "devDependencies": {
    "@chaos-design/tsconfig": "workspace:*",
    "@types/micromatch": "^4.0.9",
    "@types/node": "^20.3.3",
    "bumpp": "^9.1.1",
    "npm-run-all": "^4.1.5",
    "tsup": "^7.1.0",
    "typescript": "^5.1.6",
    "unbuild": "^1.2.1",
    "vitest": "^0.33.0"
  }
}
