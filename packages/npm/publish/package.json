{
  "name": "@chaos-design/publish",
  "type": "module",
  "description": "Chaos publish packages.",
  "version": "0.0.1",
  "private": true,
  "exports": {
    ".": {
      "development": "./src/index.ts",
      "types": "./index.d.ts",
      "require": "./lib/index.js",
      "import": "./lib/index.js"
    }
  },
  "main": "./lib/index.js",
  "module": "./lib/index.js",
  "types": "./index.d.ts",
  "bin": {
    "batch-publish": "./bin.js",
    "cbp": "./bin.js"
  },
  "files": [
    "lib",
    "bin.js"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "preinstall": "npx only-allow pnpm",
    "typecheck": "tsc -p scripts --noEmit && pnpm -r --parallel run typecheck",
    "lint": "eslint --cache ./packages/*",
    "format": "prettier --write --cache .",
    "release": "bumpp package.json"
  },
  "dependencies": {
    "find-up": "7.0.0",
    "minimist": "^1.2.8"
  },
  "devDependencies": {
    "@chaos-design/eslint-config-ts": "workspace:*",
    "@chaos-design/package": "workspace:*",
    "@chaos-design/tsconfig": "workspace:*",
    "@types/minimist": "^1.2.5",
    "@types/node": "^20.3.3",
    "bumpp": "^9.1.1",
    "eslint": "^8.44.0",
    "eslint-define-config": "^1.21.0",
    "lint-staged": "^13.2.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "tsm": "^2.3.0",
    "tsup": "^7.1.0",
    "typescript": "^5.1.6",
    "unbuild": "^1.2.1"
  }
}
