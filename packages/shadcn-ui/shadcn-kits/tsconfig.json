{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@repo/shadcn-ui/*": ["./*"],
      "@repo/*": ["../*"]
    },
    "jsx": "react-jsx",
    "types": ["react", "react-dom"],
    "lib": ["ES2022", "DOM", "DOM.Iterable", "ES2015.Iterable"],
    "rootDir": "src",
    "outDir": "dist/types",
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
